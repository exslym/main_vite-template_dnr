{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "checkJs": false,
    "jsx": "preserve",
    "target": "ES2022",
    "module": "commonjs",
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~scripts/*": [
        "src/scripts/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "bower_components",
    "**/bower_components/*",
    "tools",
    "**/tools/*",
    "public",
    "**/public/*"
  ]
}